        <field eval="[(6,0,[ref('openbase.openstc_dst'),ref('openbase.openstc_qualifier'),ref('openbase.openstc_manager'),ref('openbase.openstc_accueil'),ref('openbase.openstc_agent')])]" name="groups"/>
