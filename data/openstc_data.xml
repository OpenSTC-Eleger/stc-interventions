				<field name="body_html"><![CDATA[
				<h2>Madame, Monsieur,</h2>

				<p>Nous vous confirmons la validation de : </p>

				]]></field>
				<!-- -----------------BODY TEXT-------------- -->
				<field name="body_text"><![CDATA[
				Madame, Monsieur

				Nous vous confirmons la réservation de :

		    ]]></field>
	    </record>

		<record id="openstc_pret_email_template_ask_finished" model="email.template">
		        <field name="name">Demande d'intervention terminée</field>
		        <field name="model_id" ref="model_openstc_ask"/>
		    	<field name="email_from">${object.shop_id.company_id.partner_id.address[0].email or ''}</field>
